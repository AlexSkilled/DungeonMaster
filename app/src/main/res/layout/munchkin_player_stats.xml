<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/munchkinPlayersStats"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/info_bar_color"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAllCaps="true"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="90dp"
            android:text="@string/level_player"
            android:textSize="15dp">

        </TextView>

        <Button
            android:id="@+id/munchkinBtnLevelInc"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="40dp"

            android:background="@color/strokeInput"
            android:text="+"
            android:textColor="@color/black"
            android:textSize="15dp">

        </Button>

        <TextView
            android:id="@+id/munchkinPlayerLevel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="1"
            android:textSize="20dp"
            android:layout_marginRight="45dp">

        </TextView>

        <Button
            android:id="@+id/munchkinBtnLevelDec"
            android:layout_width="25dp"
            android:layout_height="25dp"

            android:text="-"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:background="@color/strokeInput"
            >

        </Button>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutEquipment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:textAllCaps="true"
            android:layout_marginRight="50dp"
            android:text="@string/equipment_player"
            android:textSize="15dp">

        </TextView>

        <Button
            android:id="@+id/munchkinBtnEquipmentInc"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="+"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:background="@color/strokeInput"
            android:layout_marginRight="40dp"
            >

        </Button>

        <TextView
            android:id="@+id/munchkinPlayerEquipment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:text="0"
            android:textSize="20dp">

        </TextView>

        <Button
            android:id="@+id/munchkinBtnEquipmentDec"
            android:layout_width="25dp"
            android:layout_height="25dp"

            android:text="-"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:background="@color/strokeInput"
            >
        </Button>
    </LinearLayout>
    <Button
        android:id="@+id/btnDeleteMunchkinPlayer"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="40dp"

        android:background="@color/strokeInput"
        android:text="+"
        android:textColor="@color/black"
        android:textSize="15dp">

    </Button>
</RelativeLayout>