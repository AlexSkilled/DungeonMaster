<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background_color"
    android:clickable="true">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonNotes"
            android:text="@string/btn_Notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/menu_btn_items_marginTop"
            android:layout_marginRight="@dimen/menu_btn_items_marginRight"
            android:layout_marginLeft="@dimen/menu_btn_items_marginLeft"
            android:padding="@dimen/menu_btn_items_paddings"
            android:textColor="@color/button_text_color"
            android:background="@drawable/btn_menu_items"
            />
        <!--android:backgroundTint="@color/button_color_background"-->

        <Button
            android:id="@+id/buttonGameCounters"
            android:onClick="onClickOpenGameCounters"
            android:text="@string/btn_GameCounters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/menu_btn_items_marginTop"
            android:layout_marginRight="@dimen/menu_btn_items_marginRight"
            android:layout_marginLeft="@dimen/menu_btn_items_marginLeft"
            android:padding="@dimen/menu_btn_items_paddings"
            android:textColor="@color/button_text_color"
            android:background="@drawable/btn_menu_items"
            tools:ignore="MissingConstraints"
            />
        <!--android:backgroundTint="@color/button_color_background"-->

        <Button
            android:id="@+id/buttonOpenDice"
            android:text="@string/btn_OpenDice"
            android:onClick="onClickOpenDice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/menu_btn_items_marginTop"
            android:layout_marginRight="@dimen/menu_btn_items_marginRight"
            android:layout_marginLeft="@dimen/menu_btn_items_marginLeft"
            android:padding="@dimen/menu_btn_items_paddings"
            android:textColor="@color/button_text_color"
            android:background="@drawable/btn_menu_items"
            tools:ignore="MissingConstraints"
            />
        <!--android:backgroundTint="@color/button_color_background"-->


    </LinearLayout>

</RelativeLayout>