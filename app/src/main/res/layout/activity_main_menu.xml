<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background_color"
    android:clickable="true">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonDD"
            android:onClick="onClickFavoriteGame"
            android:text="@string/btn_DD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/menu_btn_items_marginTop"
            android:layout_marginRight="@dimen/menu_btn_items_marginRight"
            android:layout_marginLeft="@dimen/menu_btn_items_marginLeft"
            android:padding="@dimen/menu_btn_items_paddings"
            android:textColor="@color/button_text_color"
            android:background="@drawable/btn_menu_items"
            />
        <!--android:backgroundTint="@color/button_color_background"-->



        <Button
            android:id="@+id/buttonTools"
            android:onClick="onClickInstruments"
            android:text="@string/btn_Tools"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/menu_btn_items_marginTop"
            android:layout_marginRight="@dimen/menu_btn_items_marginRight"
            android:layout_marginLeft="@dimen/menu_btn_items_marginLeft"
            android:padding="@dimen/menu_btn_items_paddings"
            android:textColor="@color/button_text_color"
            android:background="@drawable/btn_menu_items"
            />
        <!--android:backgroundTint="@color/button_color_background"-->


        <Button
            android:id="@+id/buttonTableGames"
            android:onClick="onClickTableGames"
            android:text="@string/btn_TableGames"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/menu_btn_items_marginTop"
            android:layout_marginRight="@dimen/menu_btn_items_marginRight"
            android:layout_marginLeft="@dimen/menu_btn_items_marginLeft"
            android:padding="@dimen/menu_btn_items_paddings"
            android:textColor="@color/button_text_color"
            android:background="@drawable/btn_menu_items"
            />
        <!--android:backgroundTint="@color/button_color_background"-->


        <Button
            android:id="@+id/btnSignOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="70dp"
            android:layout_marginRight="100dp"
            android:background="@drawable/btn_app_form"
            android:onClick="onClickLogout"
            android:text="@string/btn_signOut"
            android:textColor="@color/button_text_color"
            android:textSize="12dp" />
        <!--android:background="@drawable/button_sign_in"-->



    </LinearLayout>



</RelativeLayout>