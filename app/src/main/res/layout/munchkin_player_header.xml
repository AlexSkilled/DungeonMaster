<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/munchkinPlayersHeader"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/info_bar_color"
    android:orientation="vertical">

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/munchkinNamePlayer"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#E9FA42"
            android:textAllCaps="true"
            android:text="@string/name_player"
            android:textSize="20dp">

        </TextView>

        <TextView
            android:id="@+id/munchkinTextViewPlayerPower"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textAllCaps="true"
            android:text="@string/power_player"
            android:textSize="20dp">

         </TextView>

        <TextView
            android:id="@+id/munchkinPlayerPower"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="1"
            android:textSize="20dp">

        </TextView>


    </LinearLayout>

</RelativeLayout>