<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/munchkinPlayersHeader"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/info_bar_color"
    android:orientation="vertical">

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/munchkinNamePlayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAllCaps="true"
            android:text="@string/name_player"
            android:textSize="20dp">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:weightSum="2"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textAllCaps="true"
                android:layout_weight="1"
                android:text="@string/power_player"
                android:textSize="20dp">

            </TextView>

            <TextView
                android:id="@+id/munchkinPlayerPower"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="1"
                android:textSize="20dp">

            </TextView>

        </LinearLayout>

        <Button
            android:id="@+id/munchkinBtnMore"
            android:layout_width="32sp"
            android:layout_height="32sp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/pointer"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1">

        </Button>

    </LinearLayout>

</LinearLayout>