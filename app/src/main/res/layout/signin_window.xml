<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">


        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/emailField"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:text=""
            android:textColor="@color/base_text_color"
            android:textColorHint="@color/for_input_text_color"
            android:textSize="20dp"
            android:layout_marginTop="15dp"

            app:met_floatingLabel="highlight"
            app:met_baseColor="@color/for_input_text_color"
            app:met_primaryColor="@color/ripple_effect"
            app:met_singleLineEllipsis="true"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/passwordField"
            android:hint="Пароль"
            android:inputType="textPassword"
            android:text=""
            android:textColor="@color/base_text_color"
            android:textColorHint="@color/for_input_text_color"
            android:textSize="20dp"
            android:layout_marginTop="15dp"

            app:met_floatingLabel="highlight"
            app:met_baseColor="@color/for_input_text_color"
            app:met_primaryColor="@color/ripple_effect"
            app:met_singleLineEllipsis="true"
            />


        <Button
            android:id="@+id/buttonSignIn"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Войти"
            android:background="@drawable/button_sign_in"
            android:fontFamily="@font/pt_serif"
            android:textColor="@color/button_text_color"/>

        <Button
            android:id="@+id/text_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="100dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/marcellus_sc"
            android:text="Нет учетки. Надо зарегаться"
            android:background="@drawable/button_sign_in"
            android:textColor="@color/button_text_color"
            android:textSize="12dp" />


    </LinearLayout>

</androidx.cardview.widget.CardView>