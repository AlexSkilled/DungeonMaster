<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="10dp"
    android:background="@color/windowAppForm"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/PlayerHealth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/main_background_color"
        >



        <TextView
            android:id="@+id/TSCHealth"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="16dp"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:text="@string/counter_health">
        </TextView>

        <TextView
            android:id="@+id/TextViewSCHealth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_toRightOf="@+id/mtgSCIncHealth"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textSize="22dp"
            android:text="0">
        </TextView>

        <Button
            android:id="@+id/mtgSCIncHealth"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_toRightOf="@+id/TSCHealth"
            android:layout_marginLeft="20dp"
            android:background="@drawable/btn_app_form"
            android:textColor="@color/button_text_color"
            android:text="+">

        </Button>

        <Button
            android:id="@+id/mtgSCDecHealth"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_toRightOf="@+id/TextViewSCHealth"
            android:layout_marginLeft="20dp"
            android:background="@drawable/btn_app_form"
            android:textColor="@color/button_text_color"
            android:text="-">

        </Button>

        <Button
            android:id="@+id/buttonSCResetHealth"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:text="@string/reset"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn_app_form"
            android:textColor="@color/button_text_color">
        </Button>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/PlayerInfect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/main_background_color"
        android:layout_below="@id/PlayerHealth">



        <TextView
            android:id="@+id/TSCInfect"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="16dp"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:text="@string/counter_Infect">
        </TextView>

        <TextView
            android:id="@+id/TextViewSCInfect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_toRightOf="@+id/mtgSCIncInfect"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textSize="22dp"
            android:text="0">
        </TextView>

        <Button
            android:id="@+id/mtgSCIncInfect"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_toRightOf="@+id/TSCInfect"
            android:layout_marginLeft="20dp"
            android:background="@drawable/btn_app_form"
            android:textColor="@color/button_text_color"
            android:text="+">

        </Button>

        <Button
            android:id="@+id/mtgSCDecInfect"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_toRightOf="@+id/TextViewSCInfect"
            android:layout_marginLeft="20dp"
            android:background="@drawable/btn_app_form"
            android:textColor="@color/button_text_color"
            android:text="-">

        </Button>

        <Button
            android:id="@+id/buttonSCResetInfect"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:text="@string/reset"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn_app_form"
            android:textColor="@color/button_text_color">
        </Button>


    </RelativeLayout>

</LinearLayout>
